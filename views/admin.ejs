<% layout('layout', { title: 'Admin' }) %>

<% if (!loggedIn) { %>
  <div class="container">
    <form method="POST" action="/admin/login" id="loginForm">
      <h2>Admin Login</h2>
      <% if (error) { %><p class="error"><%= error %></p><% } %>
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Log In</button>
    </form>
  </div>
<% } else { %>
  <div class="container">
    <h2>Manage Backends</h2>
    <ul id="proxyList">
      <% backends.forEach(b => { %>
        <li>
          <span><strong><%= b.name %></strong> â†’ <%= b.target %> (prefix: <%= b.prefix %>)</span>
          <form method="POST" action="/admin/remove">
            <input type="hidden" name="name" value="<%= b.name %>" />
            <button type="submit">Remove</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <form method="POST" action="/admin/add" enctype="multipart/form-data" id="adminPanel">
      <h3>Add Backend</h3>
      <input name="name" placeholder="Key (e.g. void)" required />
      <input name="target" placeholder="http://localhost:7070" required />
      <input name="prefix" placeholder="/void" required />
      <input type="file" name="logo" accept="image/*" />
      <button type="submit">Add</button>
    </form>
    <p><a href="/admin/logout" class="button">Log out</a></p>
  </div>
<% } %>
